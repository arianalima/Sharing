<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".controleacesso.gui.ListarMeusObjetosActivity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <ImageView
            android:id="@+id/meu_objeto_imagem_principal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/object_default"
            android:background="@drawable/rectangule_white"
            android:onClick="onButtonClickObjeto"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/nome_meu_objeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textSize="16sp"
            android:textColor="@color/roxo"
            android:layout_marginTop="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/meu_objeto_imagem_principal"
            android:background="@drawable/rectangule_blue"
            android:backgroundTint="@color/popColor"
            />

        <TextView
            android:id="@+id/nome_meu_objeto_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:layout_marginTop="18dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/nome_meu_objeto"/>

        <TextView
            android:id="@+id/descricao_meu_objeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textSize="16sp"
            android:textColor="@color/roxo"
            android:layout_marginTop="18dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/nome_meu_objeto_show"
            android:background="@drawable/rectangule_blue"
            android:backgroundTint="@color/popColor"
            />

        <TextView
            android:id="@+id/descricao_meu_objeto_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:scrollbars="vertical"
            android:layout_marginTop="18dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/descricao_meu_objeto" />

        <TextView
            android:id="@+id/categoria_meu_objeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:textSize="16sp"
            android:textColor="@color/roxo"
            android:layout_marginTop="18dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/descricao_meu_objeto_show"
            android:background="@drawable/rectangule_blue"
            android:backgroundTint="@color/popColor"
            />

        <TextView
            android:id="@+id/categoria_meu_objeto_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:layout_marginTop="18dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/categoria_meu_objeto"
            />

        <TextView
            android:id="@+id/estado_meu_objeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textSize="16sp"
            android:textColor="@color/roxo"
            android:layout_marginTop="18dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/categoria_meu_objeto_show"
            android:background="@drawable/rectangule_blue"
            android:backgroundTint="@color/popColor"
            />

        <TextView
            android:id="@+id/estado_meu_objeto_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:layout_marginTop="18dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/estado_meu_objeto" />

        <TextView
            android:id="@+id/alugador_meu_objeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alugador"
            android:textSize="16sp"
            android:textColor="@color/roxo"
            android:layout_marginTop="18dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/estado_meu_objeto_show"
            android:background="@drawable/rectangule_blue"
            android:backgroundTint="@color/popColor"
            />

        <TextView
            android:id="@+id/alugador_meu_objeto_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  - - -"
            android:textSize="16sp"
            android:layout_marginTop="18dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/alugador_meu_objeto" />


        <Button
            android:id="@+id/pedir_devolucao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitar devolução"
            android:textColor="@color/popColor"
            android:backgroundTint="@color/roxo"
            android:layout_below="@+id/alugador_meu_objeto_show"/>


    </RelativeLayout>
</ScrollView>